<Page x:Class="PolyPaint.Vues.ClassEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyPaint.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200"
      Title="ClassEdit">

    <StackPanel Width="200">
        <TextBox Text="{Binding Path=ActiveItemTextContent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"
                 Style="{StaticResource MaterialDesignTextAreaTextBox}"
                 Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" MinHeight="200"/>
    </StackPanel>
</Page>
